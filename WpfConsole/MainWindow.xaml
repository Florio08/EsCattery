<Window x:Class="WpfConsole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestione Adozioni" Height="600" Width="1000" Background="#F4F6F8">
    <DockPanel LastChildFill="True">

        <!-- MENU SUPERIORE-->
        <Menu DockPanel.Dock="Top" Background="#2C3E50" Foreground="White" FontSize="14" FontWeight="Bold">
            <MenuItem Header="_Adozioni">
                <MenuItem Header="Visualizza adozioni" Click="btn_ViewAdoptions"/>
            </MenuItem>
            <MenuItem Header="_Gatti">
                <MenuItem Header="Aggiungi gatto" Click="btn_AddCat"/>
                <MenuItem Header="Visualizza gatti" Click="btn_ViewCats"/>
            </MenuItem>
            <MenuItem Header="_Info">
                <MenuItem Header="Info sul Programma"/>
                <MenuItem Header="Info su me (Mario) (Sviluppatore)"/>
            </MenuItem>
        </Menu>

        <!-- FOOTER -->
        <StatusBar DockPanel.Dock="Bottom" Background="#2C3E50" Foreground="White">
            <StatusBarItem Content="Versione 1.0.0"/>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
            <Hyperlink NavigateUri="https://github.com/MarioLatifi"
                       Foreground="LightBlue"
                       RequestNavigate="Href_Click">
                Mario Latifi
            </Hyperlink>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>


        <!-- CONTENUTO ORIZZONTALE -->
        <Grid Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- PANNELLO SINISTRO: NAV + INFO -->
            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="16" 
                    BorderBrush="#E5E9F0" BorderThickness="1">
                <StackPanel>

                    <TextBlock Text="Menu" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>
                    <StackPanel>
                        <Button Content="➕  Aggiungi Gatto" Height="36" Margin="0,0,0,8" Click="btn_AddCat"/>
                        <Button Content="🐾  Visualizza Gatti" Height="36" Margin="0,0,0,8" Click="btn_ViewCats"/>
                        <Button Content="📜  Visualizza Adozioni" Height="36" Margin="0,0,0,8" Click="btn_ViewAdoptions"/>
                        <Separator Margin="0,8"/>
                        <Button Content="🔄  Aggiorna statistiche" Height="32" Click="btn_RefreshStats"/>

                    </StackPanel>

                    <Separator Margin="0,16"/>

                    <!-- Info rapide -->
                    <StackPanel/>
                </StackPanel>
            </Border>

            <!-- PANNELLO DESTRO: STATISTICHE / CONTENUTO -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Titolo sezione -->
                <TextBlock Text="Statistiche generali"
                           FontSize="22" FontWeight="Bold" Margin="0,0,0,12"/>

                <!-- Cards statistiche (orizzontale) -->
                <UniformGrid Grid.Row="1" Rows="1" Columns="4" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <Border Background="White" CornerRadius="12" Padding="16" Margin="0,0,12,0" 
                            BorderBrush="#E5E9F0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Numero maschi" Opacity="0.7"/>
                            <TextBlock x:Name="lblMales" Text="0" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="16" Margin="0,0,12,0" 
                            BorderBrush="#E5E9F0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Numero femmine" Opacity="0.7"/>
                            <TextBlock x:Name="lblFemales" Text="0" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="16" Margin="0,0,12,0" 
                            BorderBrush="#E5E9F0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Adozioni attive" Opacity="0.7"/>
                            <TextBlock x:Name="lblAdoptions" Text="0" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="16"
                            BorderBrush="#E5E9F0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Totale gatti" Opacity="0.7"/>
                            <TextBlock x:Name="lblTotalCats" Text="0" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- (Opzionale) Sezione contenuti sotto le cards -->
                <!--
                <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="16" Margin="0,96,0,0"
                        BorderBrush="#E5E9F0" BorderThickness="1" VerticalAlignment="Stretch">
                    <TextBlock Text="Qui puoi mettere una lista, una griglia, etc."/>
                </Border>
                -->
            </Grid>
        </Grid>
    </DockPanel>
</Window>
