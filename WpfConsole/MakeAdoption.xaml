<Window x:Class="WpfConsole.MakeAdoption"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MakeAdoption" Height="520" Width="600" WindowStartupLocation="CenterOwner">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Name / Surname -->
                <RowDefinition Height="Auto"/> <!-- Address group -->
                <RowDefinition Height="Auto"/> <!-- Phone -->
                <RowDefinition Height="Auto"/> <!-- Fiscal code -->
                <RowDefinition Height="Auto"/> <!-- Email -->
                <RowDefinition Height="*"/>    <!-- Spacer -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Dati adottante" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>

            <Grid Grid.Row="1" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Nome" Margin="0,0,0,4"/>
                    <TextBox x:Name="txtName" MinWidth="200"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Cognome" Margin="0,0,0,4"/>
                    <TextBox x:Name="txtSurname" MinWidth="200"/>
                </StackPanel>
            </Grid>

            <GroupBox Grid.Row="2" Header="Indirizzo" Margin="0,0,0,8">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="Via " Margin="0,0,0,4"/>
                        <TextBox x:Name="txtStreet"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="2">
                        <TextBlock Text="Città " Margin="0,0,0,4"/>
                        <TextBox x:Name="txtCity"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,8,0,0">
                        <TextBlock Text="CAP" Margin="0,0,0,4"/>
                        <TextBox x:Name="txtPostalCode"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,8,0,0">
                        <TextBlock Text="Nazione " Margin="0,0,0,4"/>
                        <TextBox x:Name="txtCountry"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <StackPanel Grid.Row="3" Margin="0,0,0,8">
                <TextBlock Text="Numero cellulare" Margin="0,0,0,4"/>
                <TextBox x:Name="txtCelNumber"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="0,0,0,8">
                <TextBlock Text="Codice Fiscale" Margin="0,0,0,4"/>
                <TextBox x:Name="txtFiscalCode"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="0,0,0,8">
                <TextBlock Text="Email" Margin="0,0,0,4"/>
                <TextBox x:Name="txtEmail"/>
            </StackPanel>

            <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button x:Name="btnCancel" Content="Annulla" Width="100" Margin="0,0,8,0" Click="BtnCancel_Click"/>
                <Button x:Name="btnAdopt" Content="Adotta ora" Width="120" Click="BtnAdopt_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
